{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ESNext",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "Bundler",
		"importHelpers": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"strict": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"noUncheckedIndexedAccess": true,
		"lib": ["DOM", "ESNext"],
		"skipLibCheck": true,
		"types": ["node"]
	},
	"include": ["src/**/*.ts", "src/types.d.ts"]
}
